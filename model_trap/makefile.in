SOURCES=itc_model.c itc_sim.c

all: model_trap_sk model_trap_ik model_trap_nn

# Saroff and Kiefer's 1998 model
model_trap_sk:
	@CC@ -shared -std=c99 @CFLAGS@ @LIBS@ $(SOURCES) itc_calc.c energies_sk.c -o ../model_trap_sk.so

# Ian Kleckner's zero, one, or two neighbor model
model_trap_ik:
	@CC@ -shared -std=c99 @CFLAGS@ @LIBS@ $(SOURCES) itc_calc.c energies_ik.c -o ../model_trap_ik.so

# generalized nearest-neighbor model
model_trap_nn:
	@CC@ -shared -std=c99 @CFLAGS@ @LIBS@ $(SOURCES) itc_calc.c energies_nn.c -o ../model_trap_nn.so



